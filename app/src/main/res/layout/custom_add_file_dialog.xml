<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stack1"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <FrameLayout
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/icon_folder"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:id="@+id/imgFolderInDialog" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/icon_upload_file"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:id="@+id/imgUploadFileInDialog" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_camera"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:id="@+id/imgUploadPhotoInDialog" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title1"
        android:layout_below="@+id/stack1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thư mục"
            android:id="@+id/textView6" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải lên"
            android:id="@+id/textView7" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:id="@+id/textView8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stack2"
        android:layout_below="@+id/title1"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <FrameLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_sync_contact"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:id="@+id/imgSyncContact" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_sync_contact"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:id="@+id/imageView5" />
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/icon_file"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:id="@+id/imageView6" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title2"
        android:layout_below="@+id/stack2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="Danh bạ" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView5" />
    </LinearLayout>


</RelativeLayout>