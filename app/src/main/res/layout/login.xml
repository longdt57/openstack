<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_cloud"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imgIconInLogIn"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:hint="User name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtUserNameInLogIn"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:hint="Your password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPasswordInLogIn"
        android:layout_gravity="center_horizontal" />

    <mehdi.sakout.fancybuttons.FancyButton
        fancy:fb_radius = "15dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        fancy:fb_defaultColor="@color/orangeColor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        fancy:fb_text="LOGIN"
        fancy:fb_textSize="20dp"

        android:id="@+id/btnSignIn"
        android:layout_gravity="center"
        fancy:fb_textGravity="center_horizontal" />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:text="-------------- OR --------------"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />
    <mehdi.sakout.fancybuttons.FancyButton
        fancy:fb_radius = "15dp"
        fancy:fb_textColor="@color/orangeColor"
        android:layout_marginTop="20dp"

        fancy:fb_defaultColor="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        fancy:fb_text="SIGN UP"
        fancy:fb_textSize="20dp"

        android:id="@+id/btnSignUp"
        android:layout_gravity="center"
        fancy:fb_textGravity="center_horizontal" />

</LinearLayout>