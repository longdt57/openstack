<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/toolbarInSetting"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/orangeColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_back_48px_128" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Setting"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgCoverInSetting"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_below="@+id/toolbarInSetting"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_below="@+id/imgCoverInSetting"
        android:layout_gravity="right"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-28dp"
        android:src="@drawable/ic_edit_36"
        fab:fab_colorNormal="@color/orangeColor"
        fab:fab_colorPressed="#dd2c00"
        fab:fab_colorRipple="#e64a19" />

    <ImageView
        android:id="@+id/imgAvatarInSetting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/toolbarInSetting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_minion" />

    <TextView
        android:id="@+id/tvUserNameInSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAvatarInSetting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Nguyễn Văn Đức"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/setting1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/fab"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_sync_contact" />

        <TextView
            android:id="@+id/tvSetting1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="Auto sync my contact"
            android:textSize="16sp" />

        <com.rey.material.widget.Switch
            style="@style/Material.Widget.Switch"
            fab:sw_thumbColor="#FFFFFF"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:checked="false" />
    </RelativeLayout>

    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/setting1"
        android:background="#05000000" />

    <RelativeLayout
        android:id="@+id/setting2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/space1"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tvSetting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:text="Auto sync my photos"
            android:textSize="16sp" />

        <com.rey.material.widget.Switch
            fab:sw_thumbColor="#FFFFFF"

            style="@style/Material.Widget.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:checked="false" />
    </RelativeLayout>
</RelativeLayout>